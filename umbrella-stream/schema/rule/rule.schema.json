{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "Rule",
  "title": "Rule",
  "type": "object",
  "required": [
    "name",
    "priority",
    "enabled",
    "source",
    "eventTypes"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "priority": {
      "type": "integer",
      "format": "int64"
    },
    "enabled": {
      "type": "boolean"
    },
    "source": {
      "type": "string"
    },
    "eventTypes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
